Enter file contents hereCREATE TABLE EMPLEADO(ID_EMPLEADO INTEGER,NOMBRE VARCHAR2(150),SUELDO FLOAT,FECHA DATE,CONSTRAINT PK_ID_EMPLEADO PRIMARY KEY (ID_EMPLEADO));

SELECT * FROM EMPLEADO;

CREATE SEQUENCE SEC_EMPLEADO START WITH 1 INCREMENT BY 1 NOMAXVALUE;

SET SERVEROUTPUT ON;
CREATE OR REPLACE PROCEDURE GUARDAR_EMPLEADO(NOMBRE_IN IN VARCHAR2,SUELDO_IN IN FLOAT)AS
MY_ID_EMPLEADO INTEGER;
FECHA_ACTUAL DATE := SYSDATE;

BEGIN
SELECT SEC_EMPLEADO.NEXTVAL INTO MY_ID_EMPLEADO FROM DUAL;
INSERT INTO EMPLEADO(ID_EMPLEADO,NOMBRE,SUELDO,FECHA) VALUES (MY_ID_EMPLEADO,NOMBRE_IN,SUELDO_IN,FECHA_ACTUAL);
DBMS_OUTPUT.PUT_LINE('EMPLEADO GUARDADO CON EXITO!!!!');
END;
/

BEGIN
GUARDAR_EMPLEADO('Alonso',4200.24);
END;
/


CREATE OR REPLACE PROCEDURE ACTUALIZAR_EMPLEADO(ID_EMPLEADO_IN IN INTEGER,NOMBRE_IN IN VARCHAR2,PORCENTAJE_IN IN FLOAT)AS
CURSOR CURSOR_ACTUALIZAR_EMPLEADO IS SELECT * FROM EMPLEADO WHERE ID_EMPLEADO = ID_EMPLEADO_IN AND NOMBRE LIKE NOMBRE_IN FOR UPDATE;
HOY INTEGER := EXTRACT (DAY FROM SYSDATE);

BEGIN
IF HOY != 15 AND HOY != 1 THEN
RAISE_APPLICATION_ERROR(-20001,'ERROR, SOLO LOS DIAS 1 Y 15 DE CADA MES');
ELSE 
IF PORCENTAJE_IN < 0 OR PORCENTAJE_IN > 100 THEN
RAISE_APPLICATION_ERROR(-20002,'ERROR!!!, EL PORCENTAJE DEBE SER UN NUMERO ENTRE 0 Y 100');
ELSE
  FOR REC IN CURSOR_ACTUALIZAR_EMPLEADO
    LOOP
      UPDATE EMPLEADO SET SUELDO = REC.SUELDO * (1+(PORCENTAJE_IN/100)) WHERE CURRENT OF CURSOR_ACTUALIZAR_EMPLEADO;
    END LOOP;
  END IF;
    END IF;
END;
/

BEGIN
ACTUALIZAR_EMPLEADO(1,'Alonso',42.4);
END;
/
