CREATE TABLE SITIO_XXX(ID_XXX INTEGER,EDAD INTEGER);

CREATE TABLE PEQUES_XXX(ID_XXX INTEGER,EDAD INTEGER);

CREATE TABLE ADULTOS_XXX(ID_XXX INTEGER,EDAD INTEGER);

CREATE OR REPLACE TRIGGER DISPARADOR_XXX BEFORE INSERT ON SITIO_XXX FOR EACH ROW

BEGIN

IF:NEW.edad<18 THEN

  RAISE_APPLICATION_ERROR(-20001,'Lo siento ,eres un pequeño pervertido0'); 
  ELSE 
  INSERT ON PEQUES_XXX
END IF;

END;

/
CREATE OR REPLACE TRIGGER DISPARADO_XXX BEFORE INSERT ON PEQUES_XXX FOR EACH ROW

BEGIN

IF:NEW.edad<18 THEN
 RAISE_APPLICATION_ERROR(-20001,'Lo siento ,eres un pequeño pervertido0'); 
END IF;

END;

/

CREATE OR REPLACE TRIGGER DISPARAD_XXX BEFORE INSERT ON ADULTOS_XXX FOR EACH ROW

BEGIN

IF:NEW.edad>18 THEN
 RAISE_APPLICATION_ERROR(-20001,'Pervertido0'); 
END IF;

END;

/

INSERT INTO SITIO_XXX VALUES(1,20);
INSERT INTO ADULTOS_XXX VALUES(1,20);
   
SELECT * FROM SITIO_XXX;

SELECT *FROM PEQUES_XXX;

SELECT *FROM ADULTOS_XXX;
